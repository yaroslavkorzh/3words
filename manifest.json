{
  "name": " 3 Words : Awesome language learning app",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension was created with the gorgeous Korzh",
  "homepage_url": "http://korzh.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "3 Words: lanuage learning",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "contentSettings",
    "contextMenus",
    "cookies",
    "notifications",
    "tabs",
    "geolocation"
  ],
  "web_accessible_resources": ["https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css"],
  "content_scripts": [
    {
      "matches": [
        //"http://3words/"
       "<all_urls>"
      ],
      "css": [
        /*"https://cdnjs.cloudflare.com/ajax/libs/normalize/4.1.1/normalize.min.css",
        "https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css",
        "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css",*/
        "styles/normalize.css","styles/bootstrap.min.css","styles/template.css","styles/animate.css",
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        //"http://3words/"
        "<all_urls>"
      ],
      "js": [
        "libraries/jquery-1.11.3.min.js","libraries/jquery.lettering.js","libraries/jquery.textillate.js",
        "libraries/bootstrap.min.js",
        "src/inject/inject.js"
      ]
    }
  ]
}